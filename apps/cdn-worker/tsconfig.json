{
  "compilerOptions": {
    "module": "nodenext",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
  },
  "include": ["src/**/*", "config/**/*", "lib/**/*"],
  "exclude": ["node_modules"],
}
